<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:id="@+id/inventoryMenu"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/buttonLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@android:color/transparent"
                android:text="@string/category_null"
        />
        <Button
                android:id="@+id/buttonCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="34"
                android:background="@android:color/transparent"
                android:text="@string/category_null"
        />
        <Button
                android:id="@+id/buttonRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@android:color/transparent"
                android:text="@string/category_null"
        />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn="@layout/activity_store_front"
            tools:context="com.sennue.store_front.storefront.StoreFrontActivity"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

        <TableLayout
                android:id="@+id/inventoryTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <include layout="@layout/inventory_row"/>
        </TableLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
